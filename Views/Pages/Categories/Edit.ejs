<%- include('../../Components/Header/index') %>
<body>
    <%- include('../../Components/Navbar/index') %>
    <div class="container">
        <form method="POST" action="/categories/update">
            <div class="row pt-5 pb-5">
                <div class="col-12">
                    <h3>Edit categories</h3>
                </div>
                <div class="col-12 mt-5">
                    <input type="text" name="title" placeholder="Title Category" class="form-control" value="<%= categories.title  %> ">
                </div>
                <div class="col-12">
                    <input type="hidden" name="id" class="form-control" value="<%= categories.id  %> ">
                </div>
                <div class="col-12 mt-5">
                    <button class="btn btn-success" style="float:right">Save updates</button>
                </div>
            </div>
        </form>
    </div>
</body>
<%- include('../../Components/Footer/index') %>